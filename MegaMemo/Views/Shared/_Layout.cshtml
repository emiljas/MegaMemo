<!DOCTYPE html>

@*<html lang="en" manifest="/Handlers/Manifest.ashx">*@
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - MegaMemo</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/styleBundles/bootstrap")
        @Styles.Render("~/styleBundles/jquery")
        @Styles.Render("~/styleBundles/style")
    </head>
    <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
            <div class="navbar-brand">
                <div id="logoTitle">MegaMemo</div>
                <canvas id="logo" width="50" height="50"></canvas>
                <div id="helpContainer"><span>?</span></div>
            </div>
        </div>
        <div class="navbar-collapse collapse">

          <div id="loginContainer" class="navbar-form navbar-right">
            <div class="form-group">
              <input type="text" id="userName" placeholder="Username" class="form-control">
            </div>
            <div class="form-group">
              <input type="password" id="password" placeholder="Password" class="form-control">
            </div>
            <button type="submit" id="loginBtn" class="center btn btn-success">Log in</button>
          </div>
          <div id="loginInfo" class="hide white navbar-form navbar-right">
              Hello, <span class="b userName"></span>
          </div>


            <ul class="nav navbar-nav">
            <li class="active"><a href="#" onclick="javascript: showSection('decksSection')">Decks</a></li>
            <!--<li><a href="#">About</a></li>
            <li><a href="#">Contact</a></li>-->
          </ul>


        </div><!--/.navbar-collapse -->
      </div>
    </div>

    <div class="container">

      <!--<div class="starter-template">
        <h1>Bootstrap starter template</h1>
        <p class="lead">Use this document as a way to quickly start any new project.<br> All you get is this text and a mostly barebones HTML document.</p>
      </div>-->

    </div>

        @RenderBody()

        @Scripts.Render("~/scriptBundles/jquery")
        @Scripts.Render("~/scriptBundles/knockout")
        @Scripts.Render("~/scriptBundles/bootstrap")
        @Scripts.Render("~/scriptBundles/app")
        @Scripts.Render("~/scriptBundles/appSections")
    </body>
</html>
